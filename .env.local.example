# Local Development Configuration
# Copy this to .env.local for development

# SMS Mock Mode (Default for local dev)
MOCK_SMS=true

# Database
DATABASE_URL=postgresql://smsuser:smspass@localhost:5432/sms_chat_db

# Twilio (Not needed in mock mode, but here for reference)
TWILIO_ACCOUNT_SID=your_dev_account_sid
TWILIO_AUTH_TOKEN=your_dev_auth_token  
TWILIO_PHONE_NUMBER=+15551234567

# Development Settings
ENVIRONMENT=development
DEBUG=true